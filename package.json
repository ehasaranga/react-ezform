  "keywords": [
    "react",
    "javascript",
    "typescript",
    "forms",
    "react-form"
  ],
  "author": "Eranda Hasaranga",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehasaranga/react-ezform"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.6",
    "@types/react": "^18.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "peerDependencies": {
    "react": "16.8.0 - 18"
  }
}
